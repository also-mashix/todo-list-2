{
  "manifest_version": 3,
  "short_name": "To-Do",
  "name": "To Do Extension Refresher",
  "version": "1.0.0",
  "description": "A Chrome extension to manage your to-do lists.",
  "action": {
    "default_title": "Open To-Do Side Panel",
    "default_icon": "favicon.ico"
  },
  "icons": {
    "16": "favicon.ico",
    "32": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  },
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "index.html"
  }
}
